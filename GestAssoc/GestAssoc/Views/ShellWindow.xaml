<RibbonWindow x:Class="GestAssoc.Views.ShellWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:prism="http://www.codeplex.com/prism"
		xmlns:const="clr-namespace:GestAssoc.Common.Constantes;assembly=GestAssoc.Common"
		Title="GestAssoc" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition x:Name="RibbonRow" Height="Auto"/>
			<RowDefinition x:Name="ContentRow" Height="*"/>
		</Grid.RowDefinitions>
		
		<Ribbon Name="ApplicationRibbon" Grid.Row="0"
				prism:RegionManager.RegionName="{x:Static const:RegionNames.RibbonRegion}">
			<Ribbon.ApplicationMenu>
				<RibbonApplicationMenu SmallImageSource="Images\ribbon.png">
					<RibbonApplicationMenuItem Header="Infos Club" Command="{Binding Path=ShowViewCmd}"
											   CommandParameter="{x:Static const:ViewNames.InfosClubView}"/>
					<RibbonSeparator />
					<RibbonApplicationMenuItem Header="Quitter" />
				</RibbonApplicationMenu>
			</Ribbon.ApplicationMenu>
			
			<RibbonTab Header="Référentiel">
				<RibbonGroup Header="Villes">
					<RibbonButton Label="Liste" Command="{Binding Path=ShowViewCmd}" 
								  CommandParameter="{x:Static const:ViewNames.ConsultationVillesView}" />
					<RibbonButton Label="Ajout" Command="{Binding Path=ShowViewCmd}"
								  CommandParameter="{x:Static const:ViewNames.FormulaireModificationVilleView}"/>
				</RibbonGroup>
			</RibbonTab>
		</Ribbon>

		<ContentControl Name="ContentRegion" Grid.Row="1"
						prism:RegionManager.RegionName="{x:Static const:RegionNames.ContentRegion}" />
	</Grid>
</RibbonWindow>

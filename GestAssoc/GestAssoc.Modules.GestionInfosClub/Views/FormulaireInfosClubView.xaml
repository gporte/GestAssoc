<UserControl x:Uid="UserControl_1" x:Class="GestAssoc.Modules.GestionInfosClub.Views.FormulaireInfosClubView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
			 mc:Ignorable="d" 
			 d:DesignHeight="400" d:DesignWidth="500">
	<UserControl.Resources>
		<ResourceDictionary x:Uid="ResourceDictionary_1" Source="pack://application:,,,/GestAssoc.Common;component/Styles/CommonStyles.xaml" />
	</UserControl.Resources>
	
	<DockPanel x:Uid="DockPanel_1" LastChildFill="True" Margin="5,5,5,5">
		<Label x:Uid="Label_1" DockPanel.Dock="Top" HorizontalAlignment="Center" Content="Titre_Formulaire"
			   Style="{StaticResource titreUC}"/>

		<GroupBox x:Uid="GroupBox_1" Header="Header_Actions" Margin="10,10,10,0" DockPanel.Dock="Bottom" Width="200">
			<WrapPanel x:Uid="WrapPanel_1" Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Uid="Button_1" Style="{StaticResource btnCmd}" ToolTip="Tooltip_Enregistrer"
						Command="{Binding Path=SaveCmd}" CommandParameter="{Binding Path=Item}">
					<Image x:Uid="Image_1" Source="pack://application:,,,/GestAssoc.Common;component/Images/btn_save.png" />
				</Button>
			</WrapPanel>
		</GroupBox>

		<WrapPanel x:Uid="WrapPanel_2" Orientation="Vertical" HorizontalAlignment="Center">
			<StackPanel x:Uid="StackPanel_1" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_2" Content="Label_NomAssociation" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_1" Text="{Binding Path=Item.Nom}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_2" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_3" Content="Label_Adresse" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_2" Text="{Binding Path=Item.Adresse}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_3" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_4" Content="Label_Ville" Style="{StaticResource lblName}" />
				<ComboBox x:Uid="ComboBox_1" Style="{StaticResource cmbValue}" 
						  ItemsSource="{Binding Path=Villes}" 
						  SelectedItem="{Binding Path=Item.Ville}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_4" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_5" Content="Label_Telephone" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_3" Text="{Binding Path=Item.Telephone}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_5" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_6" Content="Label_Email" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_4" Text="{Binding Path=Item.Mail}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_6" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_7" Content="Label_NumeroAssociation" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_5" Text="{Binding Path=Item.Numero}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_7" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_8" Content="Label_NumeroAPS}" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_6" Text="{Binding Path=Item.NumAPS}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_8" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_9" Content="Label_NumeroFederation" Style="{StaticResource lblName}" />
				<TextBox x:Uid="TextBox_7" Text="{Binding Path=Item.NumFederation}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel x:Uid="StackPanel_9" Orientation="Horizontal" Style="{StaticResource ResourceKey=skpLabelValue}">
				<Label x:Uid="Label_10" Content="Label_SIRET" Style="{StaticResource lblName}" />
				<wpf:MaskedTextBox x:Uid="wpf:MaskedTextBox_1" Mask="000000000" HorizontalContentAlignment="Right"
								   Text="{Binding Path=Item.Siren}" 
								   Style="{StaticResource tbxValueMedium}" />
				<TextBlock x:Uid="TextBlock_1" Text=" - " Margin="20,5,20,0" Width="10" />
				<wpf:MaskedTextBox x:Uid="wpf:MaskedTextBox_2" Mask="00000" 
								   Text="{Binding Path=Item.NIC}" 
								   Style="{StaticResource tbxValueLittle}" />
			</StackPanel>
		</WrapPanel>
	</DockPanel>
</UserControl>

<UserControl x:Class="GestAssoc.Modules.GestionInfosClub.Views.FormulaireInfosClubView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
			 mc:Ignorable="d" 
			 d:DesignHeight="400" d:DesignWidth="500">
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/GestAssoc.Common;component/Styles/CommonStyles.xaml" />
	</UserControl.Resources>
	
	<DockPanel LastChildFill="True" Margin="5,5,5,5">
		<Label DockPanel.Dock="Top" HorizontalAlignment="Center" Content="Association"
			   Style="{StaticResource titreUC}"/>

		<GroupBox Header="Actions" Margin="10,10,10,0" DockPanel.Dock="Bottom" Width="200">
			<WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Style="{StaticResource btnCmd}" ToolTip="Enregistrer"
						Command="{Binding Path=SaveCmd}" CommandParameter="{Binding Path=Item}">
					<Image Source="pack://application:,,,/GestAssoc.Common;component/Images/btn_save.png" />
				</Button>
			</WrapPanel>
		</GroupBox>

		<WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
			<StackPanel Orientation="Horizontal">
				<Label Content="Nom : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Nom}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Adresse : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Adresse}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Ville : " Style="{StaticResource lblName}" />
				<ComboBox Style="{StaticResource cmbValue}" 
						  ItemsSource="{Binding Path=Villes}" 
						  SelectedItem="{Binding Path=Item.Ville}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Téléphone : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Telephone}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Email : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Mail}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Numéro : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Numero}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Num. APS : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.NumAPS}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="Num. fédération : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.NumFederation}" Style="{StaticResource tbxValue}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<Label Content="SIRET : " Style="{StaticResource lblName}" />
				<TextBox Text="{Binding Path=Item.Siren}" Style="{StaticResource tbxValue}" />
				<TextBlock Text=" - " Margin="0,5,0,0" />
				<TextBox Text="{Binding Path=Item.NIC}" Style="{StaticResource tbxValueLittle}" />
			</StackPanel>
		</WrapPanel>
	</DockPanel>
</UserControl>
